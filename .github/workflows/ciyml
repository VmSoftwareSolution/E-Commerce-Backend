name: CI Workflow

on:
  push:
    branches:
      - main
      - develop
  pull_request:
    branches:
      - main
      - develop

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # 1. Get the code to repository
      - name: Checkout code
        uses: actions/checkout@v3

      # 2. COnfigure the JDK 17
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'

      # 3. Installl dependenci with maven
      - name: Install dependencies
        run: mvn install -DskipTests

      # Execute unit test with Maven
      - name: Run tests
        run: mvn test
